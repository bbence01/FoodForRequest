<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiClient.RequestDetailsPage"
             Title="RequestDetailsPage">
    
    <StackLayout Padding="10">
        <Entry Text="{Binding SelectedRequest.Name, Mode=TwoWay}" Placeholder="Name"/>
        <Editor Text="{Binding SelectedRequest.Description, Mode=TwoWay}" Placeholder="Description"/>
        <Button Text="Save" Command="{Binding SaveRequestCommand}"/>
    </StackLayout>
</ContentPage>